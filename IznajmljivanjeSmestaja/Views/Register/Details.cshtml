@model IznajmljivanjeSmestaja.Models.Accomodation

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <h3 class="display-4">Book details</h3>
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">

                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "") "></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div class="@(i==0 ? "carousel-item active" : "carousel-item") ">
                            <img class="d-block w-100" src="@Model.Gallery[i].Url" alt="@Model.Gallery[i].Name">
                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">Rooms</span>
                    <span class="monospaced">@Model.Rooms</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <p class="description">
                        <span class="label label-primary">Description</span>
                        @Model.Description
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">Address</span>
                    <p class="description">
                        @Model.Address
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">Amenities</span>
                    <p class="description">
                        @Model.Amenities
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">Directions</span>
                    <p class="description">
                        @Model.Directions
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">Checkin</span>
                    <p class="description">
                        @Model.Checkin
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">Checkout</span>
                    <p class="description">
                        @Model.Checkout
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">Wifi</span>
                    <p class="description">
                        @Model.Wifi
                    </p>
                </div>
            </div>

      
            <div class="row">
                <div class="col-md-4">
                    <a class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModal">
                        Read now
                    </a>
                </div>
            </div>

            <hr />

           
        </div>
    </div>

    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <hr />

    
</div>