@model IznajmljivanjeSmestaja.Models.Accomodation
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

<h2>@localizer["detalji"]</h2>

<div class="container">
    
    <div class="row">
        <div class="col-md-6">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">

                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i==0 ? "active" : "") "></li>
                    }
                </ol>
                <div class="carousel-inner">
                    @for (int i = 0; i < Model.Gallery.Count(); i++)
                    {
                        <div class="@(i==0 ? "carousel-item active" : "carousel-item") ">
                            <img class="d-block w-100" src="@Model.Gallery[i].Url" alt="@Model.Gallery[i].Name">
                        </div>
                    }

                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Title</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-primary">
                    <span class="label label-primary">@localizer["Rooms"]</span>
                    <span class="monospaced">@Model.Rooms</span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">@localizer["Description"]</span>
                    <p class="description">
                        @Model.Description
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">@localizer["Address"]</span>
                    <p class="description">
                        @Model.Address
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">@localizer["Amenities"]</span>
                    <p class="description">
                        @Model.Amenities
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">@localizer["Directions"]</span>
                    <p class="description">
                        @Model.Directions
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">@localizer["Checkin"]</span>
                    <p class="description">
                        @Model.Checkin
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">@localizer["Checkout"]</span>
                    <p class="description">
                        @Model.Checkout
                    </p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <span class="label label-primary">@localizer["Wifi"]</span>
                    <p class="description">
                        @if (@Model.Wifi == true)
                        {
                        <p class="description"> Da</p>
                    }
                    else
                    {
                        <p class="description"> Ne </p>
                    }

                        </p>
                    </div>
                </div>


